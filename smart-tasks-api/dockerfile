# smart-tasks-api/Dockerfile
FROM node:20-alpine

# Create app directory
WORKDIR /usr/src/app

# Install dependencies
COPY package*.json ./
RUN npm install --only=production

# Copy source
COPY src ./src

# Expose API port
EXPOSE 4000

# Environment is injected via docker-compose (MONGODB_URI, PORT, etc.)
CMD ["node", "src/server.js"]
